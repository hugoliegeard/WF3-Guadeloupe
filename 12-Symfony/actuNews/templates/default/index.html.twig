{% extends "base.html.twig" %}

{% block title %}
    ActuNews | Premier site d'actualit√© en France
{% endblock %}

{% block content %}

    {#{{ dump(app.user) }}#}

    <div class="p-3 mx-auto text-center">
        <h1 class="display-4">ActuNews</h1>
    </div>

    <div class="py-5 bg-light">
        <div class="container ">
            <div class="row">

                {% for article in articles %}

                    <div class="col-md-4 mt-4">
                        <div class="card shadow-sm">
                            <img class="card-img-top" src="{{ asset( 'images/articles/' ~ article.image ) }}"
                                 alt="{{ article.title }}">
                            <div class="card-body">
                                <h5 class="card-title">{{ article.title }}</h5>
                                <div class="card-text">
                                    <p>{{ article.content|striptags|u.truncate(200, '...') }}</p>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <a href="{{ path('default_article', {
                                        'categorie' : article.category.alias,
                                        'alias' : article.alias,
                                        'id' : article.id
                                    }) }}"
                                       class="btn btn-primary">Lire la suite</a>
                                    <small class="text-muted">
                                        {{ article.user.firstname }} {{ article.user.lastname }}
                                    </small>
                                </div>
                            </div>
                        </div> <!-- Fin card -->
                    </div>
                {% endfor %}

            </div> <!-- Fin row -->
        </div> <!-- Fin container -->
    </div>
{% endblock %}
