{% extends "base.html.twig" %}

{% block title %}
    {{ articles[0].nomCategorie }}
{% endblock %}

{% block content %}
    <div class="p-3 mx-auto text-center">
        <h1 class="display-4">{{ articles[0].nomCategorie }}</h1>
    </div>

    <div class="py-5 bg-light">
        <div class="container ">
            <div class="row">
                {% if articles is not empty %}
                    {% for article in articles %}
                    <div class="col-md-4 mt-4">
                        <div class="card shadow-sm">
                            <img class="card-img-top" src="../images/articles/{{ article.image }}" alt="{{ article.titre }}">
                            <div class="card-body">
                                <h5 class="card-title">{{ article.titre }}</h5>
                                <div class="card-text">
                                    <p>{{ article.contenu|striptags|u.truncate(200, '...') }}</p>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <a href="{{ request.getBasePath() ~ '/default/article?id=' ~ article.id }}" class="btn btn-primary">Lire la suite</a>
                                    <small class="text-muted">
                                        {{ article.prenom }} {{ article.nom }}
                                    </small>
                                </div>
                            </div>
                        </div> <!-- Fin card -->
                    </div>
                {% endfor %}
                {% else %}
                    <div class="col alert alert-warning text-center">
                        Aucune publication pour le moment
                    </div>
                {% endif %}
            </div>
        </div> <!-- Fin container -->
    </div>
{% endblock %}

